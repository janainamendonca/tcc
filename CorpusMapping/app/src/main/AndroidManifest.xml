<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.furb.corpusmapping" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientsActivity"
            android:label="@string/title_activity_patients_activity" >
        </activity>
        <activity
            android:name=".PatientSelectedActivity"
            android:label="@string/title_activity_patient_form"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PatientFormActivity"
            android:label="@string/title_activity_patient_form"
            android:parentActivityName=".PatientsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PatientsActivity" />
        </activity>
        <activity
            android:name=".SaveImageActivity"
            android:label="@string/title_activity_save_image"
            android:parentActivityName=".PatientSelectedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.PatientSelectedActivity" />
        </activity>
        <activity
            android:name=".SelectBodyPartActivity"
            android:label="@string/title_activity_select_body_part"
            android:parentActivityName=".SaveImageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.SaveImageActivity" />
        </activity>
        <activity
            android:name=".ImageSliderActivity"
            android:label="@string/title_activity_image_slider"
            android:parentActivityName=".SaveImageActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.SaveImageActivity" />
        </activity>
    </application>

</manifest>

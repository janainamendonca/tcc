<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:name=".CorpusMappingApp"
    package="br.furb.corpusmapping"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PatientsActivity"
            android:label="@string/title_activity_patients_activity" />
        <activity
            android:name=".PatientSelectedActivity"
            android:label="@string/title_activity_patient_form"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".PatientFormActivity"
            android:label="@string/title_activity_patient_form"
            android:parentActivityName=".PatientsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PatientsActivity" />
        </activity>
        <activity
            android:name=".SaveImageActivity"
            android:label="@string/title_activity_save_image"
            android:parentActivityName=".PatientSelectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.PatientSelectedActivity" />
        </activity>
        <activity
            android:name=".SelectBodyPartActivity"
            android:label="@string/title_activity_select_body_part"
            android:parentActivityName=".SaveImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.SaveImageActivity" />
        </activity>
        <activity
            android:name=".BodyImageSliderActivity"
            android:label="@string/title_activity_image_slider"
            android:parentActivityName=".SaveImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.SaveImageActivity" />
        </activity>
        <activity
            android:name=".ViewImagesActivity"
            android:label="@string/title_activity_view_images"
            android:parentActivityName=".PatientSelectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.PatientSelectedActivity" />
        </activity>
        <activity
            android:name=".MoleImageSliderActivity"
            android:label="@string/title_activity_image_slider"
            android:parentActivityName=".ViewImagesActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.ViewImagesActivity" />
        </activity>
        <activity
            android:name=".MoleDetailedImageSliderActivity"
            android:label="Detalhes"
            android:parentActivityName=".MoleImageSliderActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.MoleImageSliderActivity" />
        </activity>
        <activity
            android:name=".ViewBodyDiagramActivity"
            android:label="@string/title_activity_view_body_diagram"
            android:parentActivityName=".PatientSelectedActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.furb.corpusmapping.PatientSelectedActivity" />
        </activity>
    </application>

</manifest>
